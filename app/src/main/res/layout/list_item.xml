<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge">


    <TextView
        android:id="@+id/instrumentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="@dimen/item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Instruments name" />

    <TextView
        android:id="@+id/bidView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/properties"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/json_features"
        android:textSize="@dimen/properties_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instrumentName"
        tools:text="@string/bid" />

    <TextView
        android:id="@+id/offerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/properties"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/json_features"
        android:textSize="@dimen/properties_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instrumentName"
        tools:text="@string/offer" />
</android.support.constraint.ConstraintLayout>